{
  "manifest_version": 2,
  "name": "内置服务",
  "version": "2.8",
  "description": "内置请求监听，实现下载增强、嗅探等功能",
  "icons": {
    "32": "images/icon.png",
    "64": "images/icon.png",
    "128": "images/icon.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "permissions": [
    "sessions",
    "tabs",
    "webRequest",
    "*://*/*",
    "<all_urls>",
    "downloads",
    "nativeMessaging",
    "nativeMessagingFromContent",
    "geckoViewAddons",
    "webRequestBlocking"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "xiutan@xiu.com"
    }
  }
}
